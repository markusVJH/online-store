{% extends 'base.html.twig' %}
{% block body %}
<section class="h-100" style="background-color: #eee;">
		<div class="container h-100 py-5">
			<div class="row d-flex justify-content-center align-items-center h-100">
					{% for product in products %}
					<div class="card rounded-3 mb-4">
						<div class="card-body p-4">
							<div class="row d-flex justify-content-between align-items-center">
								<div class="col-md-2 col-lg-2 col-xl-2">
									<img src="{{product.image}}" class="img-fluid rounded-3" alt="{{product.title}}">
								</div>
								<div class="col-md-7 col-lg-7 col-xl-7">
									<p class="lead fw-normal mb-2">{{product.title}}</p>
									<p>
										<span class="text-muted">Category:
										</span>{{product.category}}</p>
										<p class="fw-light mb-2 fs-6">{{product.description}}</p>
								</div>
								<div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
									<h5 class="mb-0">{{product.price}}$</h5>
								</div>
								<div class="col-md-1 col-lg-1 col-xl-1 text-end">
									<a href="#!" class="text-danger">
										<i class="fas fa-trash fa-lg"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
					{% endfor %}
					<div class="card">
						<div class="card-body">
							<a href="{{ path('checkout') }}" class="w-25 btn btn-primary btn-block btn-lg">Checkout</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
